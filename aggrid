button.on('click', function () {
    var selectedRows = table.rows(function (idx, data, node) {
        return $(node).find('.lot_choice').prop('checked');
    });

    var values = selectedRows.nodes().to$().map(function () {
        return $(this).find('select').val();
    }).get();

    console.log(values); // tableau avec les valeurs des <select>
});